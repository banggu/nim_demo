<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hongbao_bg_F6EBBC">
    <include layout="@layout/action_bar_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/akh"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                android:id="@+id/self_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo"/>
            <TextView
                android:id="@+id/friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC的红包"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/friend_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜发财，大吉大利"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/red_envelope_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_redenvelope_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1个红包"
            android:textSize="14sp"/>
        <RelativeLayout
            android:id="@+id/record_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                android:id="@+id/iv_friend_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_friend_img"
                android:text="ABC"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_receive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_friend_img"
                android:text="7月26日 15:30"
                android:layout_below="@+id/tv_friend_name"/>
            <TextView
                android:id="@+id/receive_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.01元"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#A0A0A0"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/left_message_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hongbao_white_fff"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/rl_receive_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_receive_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.1"
                android:textSize="40sp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/redenvelope_unit"
                android:layout_toRightOf="@+id/tv_receive_money"
                android:layout_alignBottom="@+id/tv_receive_money"
                android:paddingBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/redenvelope_tip"
                android:layout_below="@+id/tv_receive_money"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_left_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/redenvelope_left_message"
            android:textSize="20sp"
            android:layout_below="@+id/rl_receive_money"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看我的红包记录"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收到的钱可直接消费"/>
    </LinearLayout>
</LinearLayout>